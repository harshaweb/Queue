# Redis Queue System Environment Configuration Example
# Copy this file to .env.local and update the values for your environment

# ==========================================
# REQUIRED: Redis Configuration
# ==========================================
REDIS_ADDRESSES=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# REQUIRED: Server Configuration
# ==========================================
SERVER_PORT=8080
SERVER_METRICS_PORT=9090

# ==========================================
# REQUIRED: Security (CHANGE THESE!)
# ==========================================
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-32-CHAR-SECRET
API_KEYS=admin-key:admin,user-key:user

# ==========================================
# Optional: Database URLs
# ==========================================
POSTGRES_URL=postgresql://username:password@localhost:5432/queue_metadata
MYSQL_URL=mysql://username:password@localhost:3306/queue_metadata
MONGO_URL=mongodb://localhost:27017/queue_system

# ==========================================
# Optional: Monitoring
# ==========================================
PROMETHEUS_ENABLED=true
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
GRAFANA_PASSWORD=secure-password

# ==========================================
# Optional: Logging
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# Optional: Environment
# ==========================================
ENVIRONMENT=development
DEBUG=false